#!/usr/bin/env python3
"""
AI Workspace CLI Entry Point

Main executable for the AI Workspace system.
"""

import sys
import os
from pathlib import Path

# Add the src directory to Python path
workspace_dir = Path(__file__).parent
src_dir = workspace_dir / "src"
sys.path.insert(0, str(src_dir))

# Change to workspace directory
os.chdir(workspace_dir)

try:
    from ai_workspace.cli.main import main
    sys.exit(main())
except ImportError as e:
    print(f"Error: Failed to import AI Workspace modules: {e}")
    print("Make sure you're running from the ai-workspace directory")
    sys.exit(1)
except Exception as e:
    print(f"Error: {e}")
    sys.exit(1)